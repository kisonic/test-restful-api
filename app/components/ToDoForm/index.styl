@require '../../styles/variables'

.add-todo
	position relative

	&__field
		padding 1em 4.5em 1em 1em
		display block
		width 100%
		height calc(3.5em + 4px)
		line-height 1.5
		border 2px solid color_success
		outline 0
		transition border-color time

		&:focus
			border-color darken(color_success, 10)

	&__button
		position absolute
		top 2px
		right 2px
		padding 0
		display block
		width 2em
		height 2em
		font-size 1.75em
		line-height 2
		text-align center
		color white
		background-color color_success
		border 0
		cursor pointer
		transition background-color time

		&:hover
			background-color darken(color_success, 10)

		&:active
			background-color darken(color_success, 15)
